<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/app_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="13dp" >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:padding="5dp"
            android:src="@drawable/exit_registration" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="注册账号"
            android:textColor="@color/home_page_banner_up_text_color"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="85dp"
        android:paddingRight="85dp"
        android:paddingTop="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中国"
            android:textColor="@color/content_show"
            android:textSize="11sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/area_selection" />
    </LinearLayout>

    <TextView
        android:layout_width="152dp"
        android:layout_height="0.5dp"
        android:layout_gravity="center"
        android:background="#959595" />

    <EditText
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="请输入常用手机号"
        android:textColor="#d7d7d7"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        android:gravity="left" />
    
    <EditText
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="请输入密码"
        android:textColor="#d7d7d7"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        android:gravity="left" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@drawable/verification_code_bg"
        android:text="获取验证码作为密码"
        android:textSize="11sp"
        android:textColor="#959595"
        android:gravity="center" />
    
    <TextView
        android:id="@+id/tv_intent_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@drawable/verification_code_bg"
        android:text="完成"
        android:textSize="11sp"
        android:textColor="#959595"
        android:gravity="center" />

</LinearLayout>