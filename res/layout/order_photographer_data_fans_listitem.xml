<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <com.zhangwen.customization.CircleImageView
            android:id="@+id/fans_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/hun_sha_kai_pai_head" />

        <TextView
            android:id="@+id/fans_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/fans_head"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="嗨倪嘛毙滚去睡" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/jia"
            android:layout_gravity="center"
            android:layout_marginLeft="150dp"
            android:background="@drawable/frame_attention"
            android:text="＋ 关注"
            android:textColor="@color/red"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>