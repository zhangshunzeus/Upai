<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:background="@color/home_page_banner_up_text_color" >
        
        <TextView
            android:id="@+id/tv_home_page" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="首页"
            android:textSize="12sp"
            android:textColor="@color/menu_text_color"
            android:drawableTop="@drawable/home_page_btn"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/home_page_click" />
        
        <TextView 
            android:id="@+id/tv_dynamic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="动态"
            android:textSize="12sp"
            android:textColor="@color/menu_text_color"
            android:drawableTop="@drawable/dynamic"
            android:gravity="center"
            android:drawablePadding="2dp"
            android:layout_weight="1"
            android:background="@drawable/dynamic_click" />
        
        <TextView 
            android:id="@+id/tv_custom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="定制"
            android:textSize="12sp"
            android:textColor="@color/menu_text_color"
            android:drawableTop="@drawable/custom"
            android:gravity="center"
            android:drawablePadding="2dp"
            android:layout_weight="1"
            android:background="@drawable/custom_click" />
        
        <TextView 
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消息"
            android:drawablePadding="2dp"
            android:textSize="12sp"
            android:textColor="@color/menu_text_color"
            android:drawableTop="@drawable/message"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/message_click" />
        
        <TextView
            android:id="@+id/tv_my" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的"
            android:drawablePadding="2dp"
            android:textSize="12sp"
            android:textColor="@color/menu_text_color"
            android:drawableTop="@drawable/my"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/my_click" />
        
    </LinearLayout>

</LinearLayout>