<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/iv_img_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/img_one" />

        <ImageView
            android:id="@+id/img_one_transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/img_one_transparent" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="没有引力的人物"
            android:textColor="@color/creative_design_size_color"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_alignBottom="@id/iv_img_one"
            android:layout_marginRight="46dp"
            android:layout_marginBottom="14dp" >

            <ImageView
                android:id="@+id/iv_praise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/praise" />
            <ImageView
                android:id="@+id/iv_like"
                android:layout_marginLeft="41dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/like" />
            <ImageView
                android:id="@+id/iv_collection"
                android:layout_marginLeft="41dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/collection" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>