<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/photo_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/add_attention"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/black_background" >

        <com.zhangwen.customization.CircleImageView
            android:id="@+id/photo_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:src="@drawable/hun_sha_kai_pai_head" />

        <TextView
            android:id="@+id/photoer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/photo_head"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Steven  Pan"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <RelativeLayout
            android:id="@+id/add_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/photoer_name"
            android:layout_centerInParent="true"
            android:layout_marginLeft="120dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="8dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@drawable/attention_frame"
                android:src="@drawable/attention_frame" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/attention_jia"
                android:drawableStart="@drawable/attention_jia"
                android:text="关注"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/fans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_at"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/popularity_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人气  99K+"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/fans_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:text="粉丝 1356"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/photo_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fans"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:padding="5dp"
            android:text="@string/pay_attention_content"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </RelativeLayout>
